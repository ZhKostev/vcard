<tr>
  <td><%= article.title_ru %></td>
  <td><%= article.title_en %></td>
  <td><%= article.short_summary_ru %></td>
  <td><%= article.short_summary_en %></td>
  <td><%= article.status %></td>
  <td>
    <%= link_to '', edit_article_path(article), :class => 'edit_link' %>
    <%= link_to '', article_path(article), :class => 'destroy_link', :method =>  :delete,
                :confirm => "Are sure you want to delete #{article.title_en}?" %>
  </td>
</tr>
