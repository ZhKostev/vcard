<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">

<head>
  <title><%= t :zhenya_kostev %></title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class="background-wood">

<!-- Header -->
<div class="header main box-center clear-fix">

  <div class="layout-4060 clear-fix overflow-fix">

    <div class="layout-4060-left">
      <a href="#!/main" class="header-logo-link"></a>

      <h1 style="font-size:45px;"><%= t :zhenya_kostev %></h1>
      <h5><%= t :speciality %></h5>
    </div>

    <div class="layout-4060-right">
      <ul class="no-list header-menu">
        <li class="header-menu-mail">
          <a href="mailto:zh.kostev@gmail.com">zh.kostev@gmail.com</a>
        </li>
        <li class="header-menu-russian">
          <%= link_to '', '/change_language?change_language=ru' %>
        </li>
        <li class="header-menu-english">
          <%= link_to '', '/change_language?change_language=en' %>
        </li>
      </ul>
    </div>

  </div>

</div>
<!-- /Header -->


<!-- Content -->
<div class="content main box-center">

  <div class="cascade">

    <!-- Box menu -->
    <ul class="cascade-menu overflow-fix">
      <li id="tab-4" class="red-briefcase" style="left: 0px; display: block; height: 468px; opacity: 1; z-index: 2; ">
        <a href="<%= root_url %><%= I18n.locale %>#!/main">
          <span class="title"><%= t :blog %></span>
          <span class="subtitle"><%= t :blog_desc %></span>
        </a>
      </li>
    </ul>
    <!-- /Box menu -->

    <!-- Window -->
    <div class="cascade-window red" style="opacity: 1; display: block; width: 640px; ">

      <!-- Close bar -->
      <div class="cascade-window-close-bar">
        <a href="<%= root_url %><%= I18n.locale %>#!/main"></a>
      </div>
      <!-- /Close bar -->

      <!-- Page content -->
      <div class="cascade-window-content" style="overflow: hidden; padding: 0px; width: 630px; ">


        <div class="jspContainer" style="width: 630px; height: 415px; ">
          <div class="jspPane" style="padding: 0px 10px 0px 0px; top: 0px; width: 620px; ">
            <div class="layout-50 clear-fix overflow-fix page-4">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
      <!-- /Page content -->

      <!-- Footer -->
      <div class="cascade-window-footer"></div>
      <!-- /Footer -->

    </div>
    <!-- /Window -->

  </div>

</div>
<!-- /Content -->


<!-- Footer -->
<div class="footer">

  <hr class="footer-line"/>

  <div class="main box-center layout-7030 clear-fix overflow-fix" style="text-align: center">
    <%= t :minsk %>, 2012
  </div>

</div>
<!-- /Footer -->
<div id="system_dialog" style="display: none;"></div>

<script type="text/javascript">
    $(function () {
        $('.scroll_box').jScrollPane();
        $('#system_dialog').dialog({ modal:true, resizable:false, autoOpen:false,
            title:'<%= t(:system_dialog) %>', width:330,
            buttons:[
                {
                    text:'Ok',
                    click:function () {
                        $(this).dialog('close')
                    }
                }
            ]})
    })
</script>

</body>

</html>


